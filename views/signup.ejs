<%- include("./paritals/header")%>
<div class="ui grid">
    <div class="three column row">
        <div class="column"></div>
        <div class="column ui segment">
            <h1>signup</h1> 
            <form action="/signup" method="post" class="ui form">
                <div class="field required">
                    <label for="">username</label>
                    <input required type="text" placeholder="username" name="username">
                </div>
                <div class="field required">
                    <label for="">img</label>
                    <input required type="text" placeholder="img" name="img">

                </div>
                <div class="field required">
                    <label for="">email</label>
                    <input required type="email" placeholder="email" name="email">

                </div>
                <div class="field required">
                    <label for="">password</label>
                    <input required type="password" placeholder="password" name="password">
                </div>
                <button class="ui button blue">Submit</button>
            </form>
        </div>
        <div class="column"></div>
    </div>
</div>

<%- include("./paritals/footer")%>